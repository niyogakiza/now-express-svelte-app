{
  "version": 2,
  "name": "express-svelte-app",
  "regions": ["dub1"],
  "builds": [
    {
      "src": "src/api/index.js",
      "use": "@now/node"
    },
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "app/$1"
    }
  ],
  "github": {
    "silent": true
  },
  "env": {
    "ATLAS_USERNAME": "@atlas-username",
    "ATLAS_PASSWORD": "@atlas-password",
    "ATLAS_HOST": "@atlas-host",
    "ATLAS_DATABASE": "@atlas-database"
  }
}
